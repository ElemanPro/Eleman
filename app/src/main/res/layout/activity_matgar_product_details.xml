<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.elashry.eleman.Activities.ShowMaintenance_Details">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:fillViewport="true"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"

        >

        <LinearLayout
            android:id="@+id/maintenance_data_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp"
            android:visibility="visible"
            >
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="190dp">
                <ProgressBar
                    android:id="@+id/matgar_details_progBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="?android:progressBarStyleSmall"
                    android:layout_gravity="center"
                    android:visibility="visible"
                    />
                <ImageView
                    android:id="@+id/matgar_details_dev_image"
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    android:adjustViewBounds="true"
                    android:visibility="gone"
                    android:scaleType="fitXY"
                    />
            </FrameLayout>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp"

                >

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:background="@android:color/transparent"

                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/matgar_details_client_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:background="@color/colorPrimaryDark"
                            android:gravity="center"
                            android:padding="10dp"
                            android:textColor="@color/white"
                            android:textSize="@dimen/main_text_size"
                            android:textStyle="italic"
                            android:inputType="textMultiLine"
                            />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".7"
                            android:background="@color/colorPrimary"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="اسم العميل "
                            android:textColor="@color/white"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:maxLines="1"
                            />

                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="2px"
                        android:background="#160e60" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/matgar_details_client_details"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:background="@color/colorPrimaryDark"
                            android:gravity="center"
                            android:padding="10dp"
                            android:textColor="@color/white"
                            android:textSize="@dimen/main_text_size"
                            android:textStyle="italic"
                            android:inputType="textMultiLine"
                            />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".7"
                            android:background="@color/colorPrimary"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="التفاصيل "
                            android:textColor="@color/white"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:maxLines="1"
                            />

                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="2px"
                        android:background="#160e60" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/matgar_details_dev_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:background="@color/colorPrimaryDark"
                            android:gravity="center"
                            android:padding="10dp"
                            android:textColor="@color/white"
                            android:textSize="@dimen/main_text_size"
                            android:textStyle="italic"
                            android:inputType="textMultiLine"
                            />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".7"
                            android:background="@color/colorPrimary"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="اسم الجهاز"
                            android:textColor="@color/white"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:maxLines="1"
                            />

                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="2px"
                        android:background="#160e60" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/matgar_details_dev_price"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:background="@color/colorPrimaryDark"
                            android:gravity="center"
                            android:padding="10dp"
                            android:textColor="@color/white"
                            android:textSize="@dimen/main_text_size"
                            android:textStyle="italic"
                            android:inputType="textMultiLine"

                            />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".7"
                            android:background="@color/colorPrimary"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="السعر"
                            android:textColor="@color/white"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:maxLines="1"
                            />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="2px"
                        android:background="#160e60" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/matgar_details_date"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:background="@color/colorPrimaryDark"
                            android:gravity="center"
                            android:padding="10dp"
                            android:textColor="@color/white"
                            android:textSize="@dimen/main_text_size"
                            android:textStyle="italic"
                            android:inputType="textMultiLine"

                            />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".7"
                            android:background="@color/colorPrimary"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="منذ"
                            android:textColor="@color/white"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:maxLines="1"
                            />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="2px"
                        android:background="#160e60" />


                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>

    </ScrollView>
</RelativeLayout>
