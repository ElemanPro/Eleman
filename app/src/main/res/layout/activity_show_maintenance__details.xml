<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.semicolon.emcmisir.Activities.ShowMaintenance_Details">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:id="@+id/progressBar_container"
        android:visibility="gone"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loading...."
            android:textSize="18sp"

            />
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

    </LinearLayout>
    <TextView
        android:id="@+id/nopro_txt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="لا يوجد اي منتجات لعرضها"
        android:textSize="18sp"
        android:gravity="center"
        android:visibility="gone"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:fillViewport="true"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"

        android:layout_below="@+id/progressBar_container"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:id="@+id/maintenance_data_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp"
            android:visibility="visible"
            >
            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/colorPrimary"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                app:contentPadding="5dp"
                android:layout_marginBottom="10dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/cdata"
                    android:textSize="20sp"
                    android:textColor="@color/white"

                    />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp"

                >

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:background="@android:color/transparent"

                    >


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/maintenance_details_clientname"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:background="#ffffff"
                            android:gravity="center"
                            android:padding="10dp"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/main_text_size"
                            android:textStyle="italic"
                            android:inputType="textMultiLine"
                            />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".7"
                            android:background="@color/colorPrimary"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="@string/cname"
                            android:textColor="@color/white"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:maxLines="1"
                            />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="2px"
                        android:background="#160e60" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/maintenance_details_client_address"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:background="#ffffff"
                            android:gravity="center"
                            android:padding="10dp"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/main_text_size"
                            android:textStyle="italic"
                            android:inputType="textMultiLine"
                            />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".7"
                            android:background="@color/colorPrimary"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="@string/address"
                            android:textColor="@color/white"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:maxLines="1"
                            />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="2px"
                        android:background="#160e60" />



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/maintenance_details__client_phone"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:background="#ffffff"
                            android:gravity="center"
                            android:padding="10dp"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/main_text_size"
                            android:textStyle="italic"
                            android:inputType="textMultiLine"

                            />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".7"
                            android:background="@color/colorPrimary"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="@string/mobileNumber"
                            android:textColor="@color/white"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:maxLines="1"
                            />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="2px"
                        android:background="#160e60" />



                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/colorPrimary"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                app:contentPadding="5dp"
                android:layout_marginBottom="10dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/device_data"
                    android:textSize="20sp"
                    android:textColor="@color/white"

                    />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp"

                >

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:background="@android:color/transparent"

                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/maintenance_details_devtype"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:background="#ffffff"
                            android:gravity="center"
                            android:padding="10dp"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/main_text_size"
                            android:textStyle="italic"
                            android:inputType="textMultiLine"
                            />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".7"
                            android:background="@color/colorPrimary"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="@string/dname"
                            android:textColor="@color/white"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:maxLines="1"
                            />

                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="2px"
                        android:background="#160e60" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/maintenance_details_dev_warranty_state"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:background="#ffffff"
                            android:gravity="center"
                            android:padding="10dp"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/main_text_size"
                            android:textStyle="italic"
                            android:inputType="textMultiLine"

                            />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".7"
                            android:background="@color/colorPrimary"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="@string/guarantee"
                            android:textColor="@color/white"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:maxLines="1"
                            />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="2px"
                        android:background="#160e60" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/maintenance_details_dev_brand"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:background="#ffffff"
                            android:gravity="center"
                            android:padding="10dp"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/main_text_size"
                            android:textStyle="italic"
                            android:inputType="textMultiLine"

                            />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".7"
                            android:background="@color/colorPrimary"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="@string/dtype"
                            android:textColor="@color/white"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:maxLines="1"
                            />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="2px"
                        android:background="#160e60" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/maintenance_details_damage_type"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:background="#ffffff"
                            android:gravity="center"
                            android:padding="10dp"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/main_text_size"
                            android:textStyle="italic"
                            android:inputType="textMultiLine"
                            />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".7"
                            android:background="@color/colorPrimary"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="@string/damage"
                            android:textColor="@color/white"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:maxLines="1"
                            />

                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="2px"
                        android:background="#160e60" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/maintenance_details_date"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:background="#ffffff"
                            android:gravity="center"
                            android:padding="10dp"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/main_text_size"
                            android:textStyle="italic"
                            android:inputType="textMultiLine"

                            />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".7"
                            android:background="@color/colorPrimary"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="@string/date"
                            android:textColor="@color/white"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:maxLines="1"
                            />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="2px"
                        android:background="#160e60" />

                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>

    </ScrollView>
</RelativeLayout>
