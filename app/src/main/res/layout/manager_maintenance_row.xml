<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    >


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/maintenancerow"
        android:padding="@dimen/pad_5dp"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_gravity="left|center"
            android:layout_height="wrap_content"
            android:text="@string/intro5"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/txt_14sp"
            android:layout_marginBottom="5dp"
            />

            <LinearLayout
              android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                >

                <TextView
                    android:id="@+id/mngr_main_client_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="right|center"
                    android:gravity="right|center"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:padding="@dimen/pad_5dp"
                    android:textStyle="bold"
                    android:scrollHorizontally="true"
                    android:ellipsize="end"
                    android:maxLines="1"

                    />
                <TextView
                    android:id="@+id/mngr_main_dev_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center|right"
                    android:gravity="right|center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_14sp"
                    android:padding="@dimen/pad_5dp"
                    android:scrollHorizontally="true"
                    android:ellipsize="end"
                    android:maxLines="1"
                    />

            </LinearLayout>

        <TextView
            android:id="@+id/mngr_main_date"
            android:layout_width="wrap_content"
            android:gravity="center|right"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/pad_5dp"
            android:paddingBottom="@dimen/pad_5dp"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:textSize="@dimen/txt_12sp"
            android:layout_marginTop="5dp"

            />

    </LinearLayout>
</android.support.v7.widget.CardView>
